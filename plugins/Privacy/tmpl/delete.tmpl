<TMPL_INCLUDE NAME="header_global.tmpl">

<div class="instructional">
<MT_TRANS phrase="Please confirm this transaction.">
</div>

<form method="get" action="<TMPL_VAR NAME=SCRIPT_URL>">
  <input type="hidden" name="__mode" value="delete" />
  <input type="hidden" name="_type" value="<TMPL_VAR NAME=TYPE>" />

 
<p>
<MT_TRANS phrase="Are you sure you wish to delete the following items?">

<ul>
<TMPL_LOOP NAME=ENTRY_LOOP>
  <li><strong><TMPL_VAR NAME=LABEL></strong><br /><TMPL_VAR NAME=DESCRIPTION></li>
  <input type="hidden" name="id" value="<TMPL_VAR NAME=ID>" />
</TMPL_LOOP>
</ul>

</p>

<input type="submit" name="confirm" value="<MT_TRANS phrase="Yes">" />
<input type="submit" name="confirm" value="<MT_TRANS phrase="No">" />

</form>

